<h4>Lista de Categorias</h4>
<hr>
<a href="/admin/categorias/adicionar"><button class="btn btn-success">Nova Categoria</button></a>

{{#each categorias}}

<div class="card mt-4">
    <div class="card-body">
        <h4>{{nome}}</h4>
        <small>Slug: {{slug}}</small>
        <br>
        <small>Data de criação: {{date}}</small>
        <br>
        <a href="/admin/categorias/editar/{{id}}"><button class="btn btn-success mt-2">Editar</button></a>
        <form action="/admin/categorias/excluir" method="POST">
            <input type="hidden" name="id" id="id" value="{{_id}}">
            <button type="submit" class="btn btn-danger mt-2">Excluir</button>
        </form>
    </div>
</div>

{{else}}
    <hr>
    <h4 class="mt-3">Nenhuma categoria registrada</h4>
{{/each}}